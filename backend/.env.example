# ===== Application =====
APP_ENV=local
APP_NAME=KnowledgeHub API

# ===== Database (Postgres container init) =====
POSTGRES_DB=knowledgehub_db
POSTGRES_USER=admin_user
POSTGRES_PASSWORD=password

# ===== Database (App side) =====
DATABASE_URL=postgresql+psycopg://admin_user:password@db:5432/knowledgehub_db

# ===== Redis =====
# JWT ブラックリスト管理用の Redis 接続 URL
# 生成コマンド: python -c "import secrets; print(secrets.token_urlsafe(64))"
REDIS_URL=redis://redis:6379/0

# ===== JWT 認証 =====
# 重要: 環境ごとに一意のシークレットキーを生成してください
# 生成コマンド: python -c "import secrets; print(secrets.token_urlsafe(64))"
# 最小長: 32 文字
# 例: rJ8x9YkLmN3pQ2wE5tR7uI0oP4aS6dF8gH1jK9lZ3xC5vB7nM2qW4eR6tY8uI0oP
JWT_SECRET_KEY=<上記コマンドで生成>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# ===== Debug / Logging =====
DEBUG=False
